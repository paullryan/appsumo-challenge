<form action="/api/v1/answer" method="post" class="question">
  {{#each surveyQuestions}}
    <div class="question">
      <h4 class="black-text">{{question}}</h4>
      {{#is type 'text'}}
        <div class="input-field col s12">
          <input name="question-{{uuid}}" type="text">
          <label>Your Answer</label>
        </div>
      {{else}} {{#is type 'select'}}
        <div class="input-field col s12">
          <select name="question-{{uuid}}">
            {{#each options}}
              <option value={{this}}>{{this}}</option>
            {{/each}}
          </select>
          <label>Your Answer</label>
        </div>
      {{else}} {{#is type 'checkbox'}}
        <label>Your Answer</label>
        {{#each options}}
          <div class="switch">
            <label>
              <input type="checkbox" name="question-{{../uuid}}" value={{this}}></input>
              <span class="lever"></span>
              {{this}}
            </label>
          </div>
        {{/each}}
      {{else}} {{#is type 'radios'}}
        <label>Your Answer</label>
        {{#each options}}
          <p>
            <input type="radio" name="question-{{../uuid}}" value={{this}} id="{{this}}-{{uuid}}"></input>
            <label for="{{this}}-{{uuid}}">{{this}}</label>
          </p>
        {{/each}}
      {{else}} {{#is type 'textarea'}}
        <div class="input-field col s12">
          <textarea name="question-{{uuid}}" class="materialize-textarea"></textarea>
          <label for="question-{{uuid}}">Your Answer</label>
        </div>
      {{/is}}{{/is}}{{/is}}{{/is}}{{/is}}
    </div>
  {{/each}}
  <div class="row">
    <div class="col s12">
      <input type="submit" value="Submit Answers" class="btn blue darken-2 right">
    </div>
  </div>
</form>
