<div class="row">
  <form action="/api/v1/survey-question/secure" method="post" class="col s12">
    <div class="row">
      <div class="input-field col s12">
        <input id="question" name="question" type="text" class="validate">
        <label for="question">Question:</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col m6 s12" id="question-type">
        <select name="type">
          {{#each types}}
            <option value="{{this}}">{{this}}</option>
          {{/each}}
        </select>
        <label>Question Type:</label>
      </div>
      <div class="input-field col m6 s12 options">
        <input id="options" name="options" type="text" class="validate" placeholder="Question options seperated by a ','">
        <label for="options">Options:</label>
      </div>
    </div>
    <div class="row">
      <div class="col s12">
        <input class="btn blue right" type="submit" value="Save">
      </div>
    </div>
  </form>
</div>
